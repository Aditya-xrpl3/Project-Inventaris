{
  "builds": [
    {
      "src": "Inventaris_backend/wsgi_vercel.py",
      "use": "@vercel/python",
      "config": { "maxLambdaSize": "15mb", "runtime": "python3.12" }
    },
    {
      "src": "Inventaris_frontend/package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist" }
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "Inventaris_backend/wsgi_vercel.py" },
    { "src": "/auth/(.*)", "dest": "Inventaris_backend/wsgi_vercel.py" },
    { "src": "/admin/(.*)", "dest": "Inventaris_backend/wsgi_vercel.py" },
    { "src": "/static/(.*)", "dest": "Inventaris_backend/wsgi_vercel.py" },
    { "src": "/media/(.*)", "dest": "Inventaris_backend/wsgi_vercel.py" },
    { "src": "/(.*)", "dest": "Inventaris_frontend/$1" }
  ]
}
